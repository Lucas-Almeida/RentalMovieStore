@model Vidly.ViewModels.CustomerMovieViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Movie.Name</h2>

<ul>
    <li>Genre: @Model.Movie.Genre.Name</li>
    <li>Release Date: @Model.Movie.ReleaseDate.DayOfWeek, @Model.Movie.ReleaseDate.ToString("MMMM") @Model.Movie.ReleaseDate.Day, @Model.Movie.ReleaseDate.Year</li>
    <li>Date Added: @Model.Movie.DateAdded.DayOfWeek, @Model.Movie.DateAdded.ToString("MMMM")  @Model.Movie.DateAdded.Day, @Model.Movie.DateAdded.Year</li>
    <li>Number in Stock: @Model.Movie.NumberInStock</li>
</ul>

